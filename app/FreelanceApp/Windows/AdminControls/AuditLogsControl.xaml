<UserControl
    x:Class="FreelanceApp.Windows.AdminControls.AuditLogsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:FreelanceApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FreelanceApp.Windows.AdminControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:SubstringConverter x:Key="Sub50" MaxLength="50" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Левая панель: фильтр и действия  -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock
                Margin="0,0,0,10"
                FontWeight="Bold"
                Text="Фильтр по дате" />

            <TextBlock Text="С (since):" />
            <DatePicker x:Name="SincePicker" />

            <TextBlock Margin="0,5,0,0" Text="По (until):" />
            <DatePicker x:Name="UntilPicker" />

            <Button
                Margin="0,10,0,0"
                Click="OnLoadClick"
                Content="Загрузить" />

            <Separator Margin="0,20" />

            <TextBlock
                Margin="0,0,0,10"
                FontWeight="Bold"
                Text="Экспорт/Импорт" />
            <Button
                Margin="0,0,5,5"
                Click="OnExportClick"
                Content="Экспорт в JSON" />
            <Button Click="OnImportClick" Content="Импорт из JSON" />
        </StackPanel>

        <!--  Правая часть: таблица логов  -->
        <DataGrid
            x:Name="AuditGrid"
            Grid.Column="1"
            Margin="0"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding Id}"
                    Header="Id" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding ProcName}"
                    Header="Procedure" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding UserId}"
                    Header="UserId" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Action}"
                    Header="Action" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding TableName}"
                    Header="Table" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding RecordId}"
                    Header="RecordId" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding OldData, Converter={StaticResource Sub50}}"
                    Header="OldData" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding NewData, Converter={StaticResource Sub50}}"
                    Header="NewData" />
                <DataGridTextColumn
                    Width="140"
                    Binding="{Binding ChangedAt}"
                    Header="ChangedAt" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
