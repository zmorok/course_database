<UserControl
    x:Class="FreelanceApp.Windows.AdminControls.RawSqlControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FreelanceApp.Windows.AdminControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Левый блок: выбор примера, ввод SQL и кнопка  -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock
                Margin="0,0,0,10"
                FontWeight="Bold"
                Text="Примеры запросов" />
            <ListBox
                x:Name="ExamplesList"
                Height="100"
                SelectionChanged="ExamplesList_SelectionChanged" />

            <TextBlock Margin="0,10,0,0" Text="SQL-запрос:" />
            <TextBox
                x:Name="SqlTextBox"
                Height="100"
                AcceptsReturn="True"
                TextWrapping="Wrap" />

            <Button
                Margin="0,10,0,0"
                Click="OnExecuteClick"
                Content="Выполнить" />
        </StackPanel>

        <!--  Правая колонка: результат в DataGrid  -->
        <DataGrid
            x:Name="ResultGrid"
            Grid.Column="1"
            AutoGenerateColumns="True"
            CanUserAddRows="False"
            IsReadOnly="True" />
    </Grid>
</UserControl>
