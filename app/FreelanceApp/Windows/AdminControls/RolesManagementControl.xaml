<UserControl
    x:Class="FreelanceApp.Windows.AdminControls.RolesManagementControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FreelanceApp.Windows.AdminControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Левая панель: кнопки действий + форма  -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <!--  1) Панель действий  -->
            <StackPanel
                x:Name="ActionsPanel"
                Margin="0,0,0,10"
                Orientation="Horizontal">
                <Button
                    Margin="5"
                    Click="OnAddClick"
                    Content="Добавить" />
                <Button
                    Margin="5"
                    Click="OnEditClick"
                    Content="Редактировать" />
                <Button
                    Margin="5"
                    Click="OnDeleteClick"
                    Content="Удалить" />
            </StackPanel>

            <!--  2) Форма Add/Edit/Delete  -->
            <Border
                x:Name="FormPanel"
                Padding="10"
                Background="#F9F9F9"
                Visibility="Collapsed">
                <StackPanel>
                    <!--  ID  -->
                    <TextBlock Text="ID роли" />
                    <TextBox x:Name="Form_IdBox" IsReadOnly="True" />

                    <!--  Название (для Add)  -->
                    <TextBlock Margin="0,5,0,0" Text="Название роли" />
                    <TextBox x:Name="Form_NameBox" />

                    <!--  Привилегии JSON  -->
                    <TextBlock Margin="0,5,0,0" Text="Привилегии (JSON)" />
                    <TextBox
                        x:Name="Form_PrivilegesBox"
                        Height="100"
                        AcceptsReturn="True"
                        TextWrapping="Wrap" />

                    <!--  Кнопки Сохранить/Отмена  -->
                    <StackPanel
                        Margin="0,10,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Width="80"
                            Margin="5"
                            Click="OnSaveClick"
                            Content="Сохранить" />
                        <Button
                            Width="80"
                            Margin="5"
                            Click="OnCancelClick"
                            Content="Отмена" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <!--  Правая колонка: таблица ролей  -->
        <DataGrid
            x:Name="RolesGrid"
            Grid.Column="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="True"
            SelectionChanged="RolesGrid_SelectionChanged"
            SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Id}"
                    Header="Role ID"
                    SortMemberPath="Id">
                    <DataGridTextColumn.SortDirection>Ascending</DataGridTextColumn.SortDirection>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Name}" Header="Role Name" />
                <DataGridTextColumn Binding="{Binding Privileges}" Header="Role Privileges" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
