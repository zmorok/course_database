<Window
    x:Class="FreelanceApp.Windows.AdminDashboardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FreelanceApp.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Панель администратора"
    Width="900"
    Height="600"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Левая панель навигации  -->
        <StackPanel
            Grid.Column="0"
            Margin="10"
            Background="#EEE">
            <Button
                Margin="0,5"
                Click="ShowUsers_Click"
                Content="Пользователи" />
            <Button
                Margin="0,5"
                Click="ShowRoles_Click"
                Content="Роли" />
            <Button
                Margin="0,5"
                Click="ShowAudit_Click"
                Content="Аудит" />
            <Button
                Margin="0,5"
                Click="ShowSql_Click"
                Content="SQL-запросы" />
            <Button
                Margin="0,5"
                Click="ShowImportExport_Click"
                Content="Импорт/Экспорт БД" />
            <Button
                Margin="0,5"
                Click="MakeReport_Click"
                Content="Сделать отчёт" />

            <Separator Margin="0,10" />
            <Button
                Margin="0,5"
                Click="Logout_Click"
                Content="Logout" />
        </StackPanel>

        <!--  Область для динамического контента  -->
        <ContentControl
            x:Name="MainContent"
            Grid.Column="1"
            Margin="10" />
    </Grid>
</Window>
