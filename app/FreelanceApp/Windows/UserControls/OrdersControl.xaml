<UserControl
    x:Class="FreelanceApp.Windows.UserControls.OrdersControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:FreelanceApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:DAL.Models.Views;assembly=DAL"
    xmlns:local="clr-namespace:FreelanceApp.Windows.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:FreelanceApp.Models"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:NullToFalseConverter x:Key="NullToFalseConverter" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Панель фильтров и кнопок  -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <StackPanel
                VerticalAlignment="Center"
                DockPanel.Dock="Left"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Text="Показать:" />
                <RadioButton
                    x:Name="ShowCustomerOrdersRadio"
                    Margin="5"
                    Checked="OrderView_Changed"
                    Content="Мои заказы (я заказчик)"
                    GroupName="OrderView"
                    IsChecked="True" />
                <RadioButton
                    x:Name="ShowFreelancerOrdersRadio"
                    Margin="5"
                    Checked="OrderView_Changed"
                    Content="Мои заказы (я исполнитель)"
                    GroupName="OrderView" />
                <RadioButton
                    x:Name="ShowArchiveRadio"
                    Margin="5"
                    Checked="OrderView_Changed"
                    Content="Архив"
                    GroupName="OrderView" />
            </StackPanel>

            <StackPanel
                HorizontalAlignment="Right"
                DockPanel.Dock="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="EditButton"
                    Width="100"
                    Margin="5"
                    Click="OnEditClick"
                    Content="Изменить статус/дедлайн"
                    IsEnabled="{Binding ElementName=OrdersListView, Path=SelectedItem, Converter={StaticResource NullToFalseConverter}}" />
                <Button
                    x:Name="DeleteButton"
                    Width="100"
                    Margin="5"
                    Click="OnDeleteClick"
                    Content="Отменить/Удалить"
                    IsEnabled="{Binding ElementName=OrdersListView, Path=SelectedItem, Converter={StaticResource NullToFalseConverter}}" />
            </StackPanel>
        </DockPanel>

        <ListView
            x:Name="OrdersListView"
            Grid.Row="1"
            MouseDoubleClick="OrdersListView_MouseDoubleClick"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectionMode="Single">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type data:LocalOrderDisplay}">
                    <Border
                        Margin="5"
                        Padding="10"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Используем Project.Title, нужен FallbackValue, т.к. Project может быть не загружен  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,10,5"
                                FontSize="14"
                                FontWeight="Bold"
                                TextTrimming="CharacterEllipsis">
                                <Run Text="Проект:" />
                                <Run Text="{Binding ProjectTitle, FallbackValue='[Загрузка...]', TargetNullValue='[Проект не найден]'}" />
                                <Run Text="(Заказ №" />
                                <Run Text="{Binding OrderId}" />
                                <!--  Теперь Id вместо OrderId  -->
                                <Run Text=")" />
                            </TextBlock>

                            <!--  Статус и Дедлайн  -->
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <!--  Отображаем статус напрямую, можно добавить конвертер для 'красивого' вида  -->
                                <TextBlock
                                    Margin="0,0,15,0"
                                    FontWeight="SemiBold"
                                    Text="{Binding OrderStatus}" />
                                <TextBlock>
                                    <Run Text="Дедлайн:" />
                                    <Run Text="{Binding OrderDeadline, StringFormat='dd.MM.yyyy', FallbackValue='Не указан', TargetNullValue='Не указан'}" />
                                </TextBlock>
                            </StackPanel>

                            <!--  Исполнитель/Заказчик  -->
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="0,3,0,3">
                                <TextBlock>
                                    <Run Text="Заказчик: " />
                                    <Run Text="{Binding CustomerFullName, FallbackValue='', TargetNullValue='?'}" />
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Исполнитель: " />
                                    <Run Text="{Binding FreelancerFullName, FallbackValue='', TargetNullValue='?'}" />
                                </TextBlock>
                            </StackPanel>

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                FontSize="11"
                                Foreground="Gray">
                                <Run Text="Создан:" />
                                <Run Text="{Binding OrderCreationDate, StringFormat='dd.MM.yyyy HH:mm'}" />
                            </TextBlock>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Border
            x:Name="AddEditOrderPanel"
            Grid.Row="2"
            Margin="0,10,0,0"
            Padding="15"
            Background="WhiteSmoke"
            BorderBrush="Gray"
            BorderThickness="1"
            Visibility="Collapsed">
            <StackPanel>
                <TextBlock
                    x:Name="FormTitle"
                    Margin="0,0,0,15"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Изменение заказа" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,10,5"
                        VerticalAlignment="Center"
                        Text="Статус:" />
                    <ComboBox
                        x:Name="StatusComboBox"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,0,5"
                        DisplayMemberPath="Content"
                        SelectedValuePath="Tag">
                        <ComboBoxItem Content="Ожидает" Tag="pending" />
                        <ComboBoxItem Content="В работе" Tag="active" />
                        <ComboBoxItem Content="Завершен" Tag="completed" />
                        <ComboBoxItem Content="Отменён" Tag="cancelled" />
                        <ComboBoxItem Content="Спор" Tag="disputed" />
                    </ComboBox>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,10,5"
                        VerticalAlignment="Center"
                        Text="Дедлайн:" />
                    <DatePicker
                        x:Name="DeadlinePicker"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,0,0,5" />

                </Grid>
                <StackPanel
                    Margin="0,15,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="SaveButton"
                        Width="100"
                        Margin="5"
                        Click="OnSaveClick"
                        Content="Сохранить" />
                    <Button
                        x:Name="CancelButton"
                        Width="100"
                        Margin="5"
                        Click="OnCancelClick"
                        Content="Отмена" />
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>

</UserControl>