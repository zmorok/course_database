<UserControl
    x:Class="FreelanceApp.Windows.UserControls.ComplaintsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="900"
    Height="500">

    <!--  встроенный системный конвертер  -->
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="Bool2Vis" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!--  ==== 1. Пользователи =====  -->
        <GroupBox Header="Контрагенты">
            <ListView x:Name="UsersList" MouseDoubleClick="UsersList_DoubleClick">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="4" Orientation="Horizontal">
                            <TextBlock FontWeight="SemiBold" Text="{Binding FullName}" />
                            <Button
                                Margin="10,0,0,0"
                                Click="Complain_Click"
                                Content="Пожаловаться"
                                Tag="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GroupBox>

        <!--  ==== 2. Мои жалобы =====  -->
        <GroupBox Grid.Column="2" Header="Мои жалобы">
            <ListView x:Name="ComplaintsList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="4"
                            Padding="6"
                            BorderBrush="LightGray"
                            BorderThickness="1">
                            <StackPanel>
                                <TextBlock>
                                    <Run Text="Адресат: " />
                                    <Run Text="{Binding TargetName}" />
                                </TextBlock>
                                <TextBlock
                                    FontSize="11"
                                    Foreground="Gray"
                                    Text="{Binding Status}" />

                                <TextBlock
                                    Margin="0,4,0,0"
                                    Text="{Binding DescriptionPreview}"
                                    TextWrapping="Wrap" />

                                <StackPanel Margin="0,6,0,0" Orientation="Horizontal">
                                    <Button
                                        Width="45"
                                        Margin="0,0,5,0"
                                        Click="EditComplaint_Click"
                                        Content="Изм."
                                        Visibility="{Binding IsEditable, Converter={StaticResource Bool2Vis}}" />
                                    <Button
                                        Width="70"
                                        Click="DeleteComplaint_Click"
                                        Content="Удалить"
                                        Visibility="{Binding IsEditable, Converter={StaticResource Bool2Vis}}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GroupBox>

        <!--  ==== 3. Панель ввода =====  -->
        <Border
            x:Name="EditPanel"
            Grid.ColumnSpan="3"
            Padding="12"
            Background="#AAFFFFFF"
            BorderBrush="Gray"
            BorderThickness="1"
            Visibility="Collapsed">
            <StackPanel Width="420">
                <TextBlock
                    x:Name="PanelTitle"
                    FontSize="15"
                    FontWeight="Bold" />
                <TextBox
                    x:Name="ComplaintTextBox"
                    Height="90"
                    Margin="0,8,0,0"
                    TextWrapping="Wrap" />
                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Width="100"
                        Margin="0,0,6,0"
                        Click="SaveComplaint_Click"
                        Content="Сохранить" />
                    <Button
                        Width="80"
                        Click="CancelEdit_Click"
                        Content="Отмена" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
