<UserControl
    x:Class="FreelanceApp.Windows.UserControls.PortfolioControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="Auto"
    Height="Auto">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Панель действий и форма  -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <Button
                Width="200"
                Margin="5"
                Click="OnAddClick"
                Content="Добавить" />
            <Button
                Width="200"
                Margin="5"
                Click="OnDeleteClick"
                Content="Удалить" />

            <StackPanel
                x:Name="AddFormPanel"
                Margin="0,10,0,0"
                Visibility="Collapsed">
                <TextBlock Text="Описание:" />
                <TextBox x:Name="DescriptionBox" Margin="0,0,0,5" />

                <TextBlock Text="Медиа (JSON):" />
                <TextBox x:Name="MediaJsonBox" Margin="0,0,0,5" />

                <TextBlock Text="Навыки (через запятую):" />
                <TextBox x:Name="SkillsBox" Margin="0,0,0,5" />

                <TextBlock Text="Опыт:" />
                <TextBox x:Name="ExperienceBox" Margin="0,0,0,10" />

                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                    <Button
                        Width="100"
                        Margin="0,0,10,0"
                        Click="OnSaveClick"
                        Content="Сохранить" />
                    <Button
                        Width="100"
                        Click="OnCancelClick"
                        Content="Отмена" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!--  Список  -->
        <ScrollViewer Grid.Column="1">
            <ItemsControl x:Name="PortfolioItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Width="220"
                            Margin="5"
                            Padding="10"
                            Background="#EEE"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            MouseLeftButtonUp="OnPortfolioClick"
                            Tag="{Binding Original}">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="{Binding Description}" />
                                <TextBlock Text="{Binding Experience}" TextWrapping="Wrap" />
                                <TextBlock
                                    FontSize="10"
                                    Foreground="Gray"
                                    Text="{Binding Media}" />
                                <TextBlock FontSize="10" Text="{Binding Skills}" />
                                <Button
                                    Margin="0,5,0,0"
                                    Click="OnDeleteClick"
                                    Content="Удалить" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
